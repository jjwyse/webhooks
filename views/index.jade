         script.
            var socket = io();
            socket.on('webhook', function (webhook) {
               console.log(webhook);
               var body = webhook.body;
               var headers = webhook.headers;
               $('.webhooks').prepend('<br>');
               $('.webhooks').prepend('<hr>');
               $('.webhooks').prepend('<br>');
               $('.webhooks').prepend(headers);
               $('.webhooks').prepend('<br>');
               $('.webhooks').prepend('<h3>Headers:</h3>');
               $('.webhooks').prepend(body);
               $('.webhooks').prepend('<br>');
               $('.webhooks').prepend('<h3>Body:</h3>');
               $('.webhooks').prepend('<br>');
               $('.webhooks').prepend(new Date());
            });
